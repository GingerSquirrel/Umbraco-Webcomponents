{
  "name": "webcomponents-vite-project",
  "version": "1.0.0",
  "description": "A project to demonstrate web components using Vite.",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:vite": "vite build --outDir ../dist-vite",
    "umbbuild": "set VITE_UMB=true && vite build --outDir ../../UmbracoWebComponents/wwwroot",
    "serve": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build --output-dir dist/storybook",
    "merge:builds": "cpx \"dist-vite/**/*\" dist && cpx \"dist-storybook/**/*\" dist/storybook",
    "build:all": "npm run build && npm run build-storybook",
    "test:storybook": "test-storybook",
    "test:storybook:ci": "test-storybook --ci",
    "test:storybook:ui": "test-storybook --browsers=chromium",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:coverage:report": "vitest run --coverage && open coverage/index.html"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@storybook/addon-a11y": "^9.0.16",
    "@storybook/addon-docs": "^9.0.16",
    "@storybook/addon-vitest": "^9.0.17",
    "@storybook/builder-vite": "^9.0.16",
    "@storybook/html-vite": "^9.0.16",
    "@storybook/jest": "^0.2.2",
    "@storybook/test-runner": "^0.23.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.3",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cpx": "^1.5.0",
    "jsdom": "^26.1.0",
    "lit": "^3.3.0",
    "playwright": "^1.54.1",
    "sass": "^1.89.2",
    "storybook": "^9.0.16",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-checker": "^0.9.3",
    "vitest": "^3.2.4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "outDir": "../dist",
    "emptyOutDir": false
  },
  "umbBuild": {
    "outDir": "../../UmbracoWebComponents/wwwroot",
    "emptyOutDir": false
  },
  "dependencies": {
    "@storybook/testing-library": "^0.2.1",
    "markdown-to-jsx": "^7.7.10"
  }
}
